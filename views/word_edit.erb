<h3>Edit <%= @word.word %></h3>

<form action="/word/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="word_edit">Change word:</label>
  <input id="word_edit" name="word_edit" type="text" required>

  <button type="submit" class="btn btn-success">Update</button>
</form>

<form action="/word/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete word</button>
</form>

<p><a href="/">Return to your list of words</a></p>