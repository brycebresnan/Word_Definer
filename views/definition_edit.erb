<h3>Edit definition</h3>

<form action="/word/<%= @word.id() %>/def/<%= @definition.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="def_edit">Change definition:</label>
  <input id="def_edit" name="def_edit" type="text" required>

  <button type="submit" class="btn btn-success">Update</button>
</form>

<form action="/word/<%= @word.id() %>/def/<%= @definition.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete definition</button>
</form>

<p><a href=":back">Return to your word</a></p>